spring:
  datasource:
    url: jdbc:mysql://localhost:3306/tb_spring_api?createDatabaseIfNotExist=true&useSSL=false&serverTimezone=UTC
    username: your-username
    password: your-password
    driver-class-name: com.mysql.cj.jdbc.Driver

  jpa:
    hibernate:
      ddl-auto: update
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQL8Dialect
        format_sql: true
    show-sql: true
